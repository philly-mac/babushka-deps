#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

CMD=/opt/elasticsearch/bin/elasticsearch
DAEMON=elasticsearch
ARGS=

[ -r /etc/conf.d/$DAEMON ] && . /etc/conf.d/$DAEMON

PID=`pgrep -f elasticsearch`

case "$1" in
 start)
   stat_busy "Starting $DAEMON"
   [ -z "$PID" ] && $CMD &>/dev/null
   if [[ -n `pgrep -f elasticsearch` ]]; then
     add_daemon $DAEMON
     stat_done
   else
     stat_fail
     exit 1
   fi
   ;;
 stop)
   stat_busy "Stopping $DAEMON"
   [ -n "$PID" ] && kill $PID &>/dev/null
   if [ $? = 0 ]; then
     rm_daemon $DAEMON
     stat_done
   else
     stat_fail
     exit 1
   fi
   ;;
 restart)
   $0 stop
   sleep 5
   $0 start
   ;;
 *)
   echo "usage: $0 {start|stop|restart}"
esac

